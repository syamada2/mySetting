{
  //* INSERT
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": ["j", "j"], "after": ["<Esc>"] },
    { "before": ["っ", "ｊ"], "after": ["<Esc>"] }
  ],
  //* NORMAL
  "vim.normalModeKeyBindingsNonRecursive": [
    // 表示行で移動
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },
    // 大文字JKで10行ずつ移動する
    { "before": ["K"], "after": ["1", "0", "k"] },
    { "before": ["J"], "after": ["1", "0", "j"] },
    // 検索ハイライト解除
    { "before": ["<C-n>"], "commands": [":nohl"] },
    // undo redo でvscodeのものを使用
    { "before": ["u"], "commands": ["undo"] },
    { "before": ["<C-r>"], "commands": ["redo"] },
    // dで削除時にクリップボードに保存されないようにする
    { "before": ["d"], "after": ["\"", "_", "d"] },
    { "before": ["D"], "after": ["\"", "_", "D"] },
    { "before": ["d", "d"], "after": ["\"", "_", "d", "d"] },
    // カーソル行の移動
    { "before": ["<C-j>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<C-k>"], "commands": ["editor.action.moveLinesUpAction"] },
    // 行の最後に移動
    { "before": ["L"], "after": ["$"] },
    // 行の開始に移動
    { "before": ["H"], "after": ["^"] },
    // ;でコマンドモードへ
    { "before": [";"], "after": [":"] },
    // 閉じる
    { "before": ["<leader>", "q"], "after": [":q"] },
    // 全選択
    { "before": ["<leader>", "a"], "after": ["g", "g", "V", "G"] },
    // 定義に移動
    {
      "before": ["<leader>", "]"],
      "commands": ["editor.action.revealDefinition"]
    },
    // 型定義に移動
    {
      "before": ["<leader>", "["],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    // 参照に移動
    {
      "before": ["<leader>", "\\"],
      "commands": ["editor.action.goToReferences"]
    },
    // ブックマークのトグル
    { "before": ["<leader>", "b"], "commands": ["Bookmarks.toggle"] },
    // 定義プレビューホバーの表示
    {
      "before": ["<leader>", "g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    // クイックフィックス
    { "before": ["<leader>", "."], "commands": ["editor.action.quickFix"] },
    // コメントアウト トグル
    { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] }
  ],
  //* VISUAL
  "vim.visualModeKeyBindingsNonRecursive": [
    // JKで10行ずつ移動する
    { "before": ["J"], "after": ["1", "0", "j"] },
    { "before": ["K"], "after": ["1", "0", "k"] },
    // 行の最後まで選択
    { "before": ["L"], "after": ["$"] },
    // 行の開始まで選択
    { "before": ["H"], "after": ["^"] },
    // dで削除時にyankされないようにする
    { "before": ["d"], "after": ["\"", "_", "d"] },
    // カーソル行の移動
    { "before": ["<C-j>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<C-k>"], "commands": ["editor.action.moveLinesUpAction"] },
    // マルチカーソル
    { "before": ["<C-n>"], "after": ["g", "b"] },
    // コメントアウトトグル
    { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] }
  ],
  //* COMMAND
  "vim.commandLineModeKeyBindingsNonRecursive": [
    { "before": ["<CR>"], "after": ["<CR>", "z", "z"] }
  ],
  //* OTHERS
  // easy motion 有効
  "vim.easymotion": true,
  // 検索結果 ハイライト
  "vim.hlsearch": true,
  // たたまれた行をまたぐ
  "vim.foldfix": true,
  // システムのクリップボードを使用
  "vim.useSystemClipboard": true,
  // leaderをspaceキーに設定
  "vim.leader": "<space>",
  // 文字選択したものを * で検索をかけられるようにする
  "vim.visualstar": true,

  /* フォーマッタ */
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.defaultFormatter": "Koihik.vscode-lua-format"
  },
  "workbench.colorCustomizations": {
    "[Solarized Dark+]": {
      "editor.selectionBackground": "#165e70"
    },
    "[Solarized Dark]": {}
  },
  "editor.tokenColorCustomizations": {
    "[Solarized Dark]": {
      "textMateRules": [
        // RED
        {
          "scope": [
            // 基本色
            "meta",
            // クラス名
            "support.class",
            // タイプとの間のコロン
            "keyword.operator.type.annotation",
            // セミコロン
            "punctuation.terminator.statement",
            // `${}`
            "punctuation.definition.template-expression.begin",
            "punctuation.definition.template-expression.end"
          ],
          "settings": {
            "foreground": "#d34848"
          }
        },
        // CYAN
        {
          "scope": [
            // string
            "string",
            // number
            "constant.numeric",
            // boolean
            "constant.language.boolean",
            "constant.language"
          ],
          "settings": {
            "foreground": "#2AA198"
          }
        },
        // GRAY
        {
          "scope": [
            // コメント
            "comment"
          ],
          "settings": {
            "foreground": "#718a92",
            "fontStyle": "italic"
          }
        },
        // LIGHT GREEN
        {
          "scope": [
            // const let 等
            "storage.type",
            // for if return 等
            "keyword.control",
            // + = 等
            "keyword.operator",
            "support.type.property-name"
          ],
          "settings": {
            "foreground": "#a1db2d",
            "fontStyle": ""
          }
        },
        // WHITE
        {
          "scope": [
            // 変数名
            "variable",
            "variable.parameter",
            "variable.other.constant",
            // markdown パラグラフ
            "meta.paragraph"
          ],
          "settings": {
            "foreground": "#c2c2c2"
          }
        },
        // BLUE
        {
          "scope": [
            "entity.name.function"
            // "support.variable.property"
          ],
          "settings": {
            "foreground": "#2c8ecb",
            "fontStyle": ""
          }
        },
        // ORANGE
        {
          "scope": [
            // import
            "keyword.control.import",
            // from
            "keyword.control.from"
          ],
          "settings": {
            "foreground": "#d35d48"
          }
        }
      ]
    }
  },

  /* ワークベンチ */
  // アイコンテーマ
  "workbench.iconTheme": "vscode-icons",
  // インデントガイド
  "workbench.tree.renderIndentGuides": "always",
  // explorerのツリーインデント
  "workbench.tree.indent": 8,

  /* エディター */
  // 保存時にフォーマット
  "editor.formatOnSave": true,
  // タブのサイズ
  "editor.tabSize": 2,
  // カッコが色分けされるようにする
  "editor.guides.bracketPairs": false,
  "editor.bracketPairColorization.enabled": false,
  // 今いる階層を上部に表示する
  "editor.stickyScroll.enabled": true,
  // ハイライトを一緒にコピーする
  "editor.copyWithSyntaxHighlighting": true,
  // ミニマップを非表示
  "editor.minimap.enabled": false,
  // カーソルを移動した際にN行以上、上下にスクロールされないようにする
  "editor.cursorSurroundingLines": 10,

  /* その他 */
  // 言語を日本語にしてエメットを生成
  "emmet.variables": {
    "lang": "ja"
  },
  // VSCodeの音量
  "audioCues.volume": 0,
  // Prettier 設定
  "prettier.singleQuote": true,
  // フォルダ階層を省略しない
  "explorer.compactFolders": false,
  "markdown-preview-enhanced.previewTheme": "solarized-dark.css",
  "markdown.preview.breaks": true,
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "extensions.ignoreRecommendations": true,
  "Lua.telemetry.enable": true,
  // "editor.fontFamily": "monaco",
  "vsicons.presets.hideExplorerArrows": true,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.visible": false,
  "breadcrumbs.enabled": false,
  "workbench.startupEditor": "none",
  "window.zoomLevel": 0.5,
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "Solarized Dark"
}

{
  //* 詳細カスタム */
  "customizeUI.stylesheet": {
    // Vim Status bar color
    // NORMAL MODE
    // "#vscodevim\\.vim\\.primary[aria-label^=\"-- NORMAL\"]": "color: #002b2c !important; background-color: #0071aa !important; font-weight: bold;",
    "#vscodevim\\.vim\\.primary[aria-label^=\"-- NORMAL --\"]": "width: 140px; background: linear-gradient(-135deg, transparent 35px, #0071aa 0) top right, linear-gradient(-45deg, transparent 35px, #0071aa 0) bottom right; background-size: 100% 50%; background-repeat: no-repeat; color: #002b2c; line-height: 30px; font-weight: bold;",
    "#vscodevim\\.vim\\.primary[aria-label^=\"-- NORMAL --  MULTI CURSOR\"]": "width: 250px; background: linear-gradient(-135deg, transparent 35px, #0071aa 0) top right, linear-gradient(-45deg, transparent 35px, #0071aa 0) bottom right; background-size: 100% 50%; background-repeat: no-repeat; color: #002b2c; line-height: 30px; font-weight: bold;",
    // INSERT MODE
    // "#vscodevim\\.vim\\.primary[aria-label^=\"-- INSERT\"]": "color: #002b2c !important; background-color: #849a28 !important; font-weight: bold;",
    "#vscodevim\\.vim\\.primary[aria-label^=\"-- INSERT --\"]": "width: 140px; background: linear-gradient(-135deg, transparent 35px, #849a28 0) top right, linear-gradient(-45deg, transparent 35px, #849a28 0) bottom right; background-size: 100% 50%; background-repeat: no-repeat; color: #002b2c; line-height: 30px; font-weight: bold;",
    "#vscodevim\\.vim\\.primary[aria-label^=\"-- INSERT --  MULTI CURSOR\"]": "width: 250px; background: linear-gradient(-135deg, transparent 35px, #849a28 0) top right, linear-gradient( -45deg, transparent 35px, #849a28 0) bottom right; background-size:  100% 50%; background-repeat: no-repeat; color: #002b2c; line-height: 30px;  font-weight: bold;",
    // VISUAL MODE
    "#vscodevim\\.vim\\.primary[aria-label^=\"-- VISUAL\"]": "color: #002b2c !important; background-color: #a73d71 !important; font-weight: bold;",
    // other mode
    "#vscodevim\\.vim\\.primary[aria-label^=\":\"]": "background-color: #7f8490 !important:",

    // git status
    "#status\\.scm\\.0.statusbar-item.left": "background-color: #75807d !important; color: #053038 !important"
  },
  // "customizeUI.titleBar": "inline", // macOS のみ

  "workbench.colorCustomizations": {
    "[Solarized Dark]": {
      "editorCursor.foreground": "#0088F4"
    }
  },

  /** vim関連設定 */

  //* insertモードのキーバインド
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": ["j", "j"], "after": ["<Esc>"] },
    { "before": ["っ", "ｊ"], "after": ["<Esc>"] }
  ],

  //* normalモードのキーバインド
  "vim.normalModeKeyBindingsNonRecursive": [
    /*- Vim 操作系 -*/

    /* Leader以外 */
    // 標準で表示行で移動
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },
    // g+で論理行で移動
    { "before": ["g", "j"], "after": ["j"] },
    { "before": ["g", "k"], "after": ["k"] },
    // 検索ハイライト解除
    { "before": ["<C-n>"], "commands": [":nohl"] },
    // uのundoでVSCodeのものを使用
    { "before": ["u"], "commands": ["undo"] },
    // ctrl+rのredoでVSCodeのものを使用
    { "before": ["<C-r>"], "commands": ["redo"] },
    // dで削除時にyankされないようにする
    { "before": ["d"], "after": ["\"", "_", "d"] },
    { "before": ["D"], "after": ["\"", "_", "D"] },
    { "before": ["d", "d"], "after": ["\"", "_", "d", "d"] },
    // カーソル行の移動
    { "before": ["<C-j>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<C-k>"], "commands": ["editor.action.moveLinesUpAction"] },
    // ファイル内のエラー箇所に移動
    { "before": ["<C-e>"], "commands": ["editor.action.marker.nextInFiles"] },
    { "before": ["<C-e>"], "commands": ["editor.action.marker.prevInFiles"] },
    // Enterでノーマルモードのまま改行されるようにする
    { "before": ["<Enter>"], "after": ["o", "<Esc>"] },
    // 大文字JKで10行ずつ移動する
    { "before": ["K"], "after": ["1", "0", "k"] },
    { "before": ["J"], "after": ["1", "0", "j"] },

    /* Leader */
    // 全選択
    { "before": ["<leader>", "a"], "after": ["g", "g", "V", "G"] },
    // 行の最後にノーマルモードのまま移動
    { "before": ["<leader>", "l"], "after": ["$"] },
    // 行の開始にノーマルモードのまま移動
    { "before": ["<leader>", "h"], "after": ["^"] },

    /*- VSCode 操作系-*/
    // 定義に移動
    {
      "before": ["<leader>", "]"],
      "commands": ["editor.action.revealDefinition"]
    },
    // 型定義に移動
    {
      "before": ["<leader>", "["],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    // 参照に移動
    {
      "before": ["<leader>", "\\"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    // ファイルエクスプローラーのフォーカス
    { "before": ["<leader>", "e"], "commands": ["workbench.view.explorer"] },
    // クイックオープン
    { "before": ["<leader>", "p"], "commands": ["workbench.action.quickOpen"] },
    // コマンドパレット
    {
      "before": ["<leader>", "P"],
      "commands": ["workbench.action.showCommands"]
    },
    // ブックマークのトグル
    { "before": ["<leader>", "b"], "commands": ["Bookmarks.toggle"] },
    // 定義プレビューホバーの表示
    {
      "before": ["<leader>", "g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    // 一つ戻る
    {
      "before": ["<leader>", "-"],
      "commands": ["workbench.action.navigateBack"]
    },
    // 一つ進む
    {
      "before": ["<leader>", "="],
      "commands": ["workbench.action.navigateForward"]
    },
    // クイックフィックス
    { "before": ["<leader>", "."], "commands": ["editor.action.quickFix"] },
    // すべてのタブを閉じる
    {
      "before": ["<leader>", "`", "`"],
      "commands": ["workbench.action.closeAllEditors"]
    },
    // コメントアウト トグル
    { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] },
    // 標準pasteを使用
    {
      "before": ["<leader>", "v"],
      "commands": ["editor.action.clipboardPasteAction"]
    },
    // タブピッカー
    {
      "before": ["<leader>", "t"],
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
      ]
    }
  ],

  //* visualモードのキーバインド
  "vim.visualModeKeyBindingsNonRecursive": [
    // マルチカーソル
    { "before": ["<C-n>"], "after": ["g", "b"] },
    // カーソル行の移動
    // dで削除時にyankされないようにする
    { "before": ["d"], "after": ["\"", "_", "d"] },
    { "before": ["<C-j>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<C-k>"], "commands": ["editor.action.moveLinesUpAction"] },
    // JKで10行ずつ移動する
    { "before": ["J"], "after": ["1", "0", "j"] },
    { "before": ["K"], "after": ["1", "0", "k"] },

    /* Leader */
    // 行の最後まで選択
    { "before": ["<leader>", "l"], "after": ["%"] },
    // 行の開始まで選択
    { "before": ["<leader>", "h"], "after": ["^"] },
    // コメントアウトトグル
    { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] },
    // Escape
    { "before": ["<leader>", "<leader>"], "after": ["<Esc>"] }
  ],

  //* その他 */
  // easy motion 有効
  "vim.easymotion": true,
  // 検索結果 ハイライト
  "vim.hlsearch": true,
  // たたまれた行をまたぐ
  "vim.foldfix": true,
  // システムのクリップボードを使用
  "vim.useSystemClipboard": true,
  // leaderをspaceキーに設定
  "vim.leader": "<space>",
  // 文字選択したものを * で検索をかけられるようにする
  "vim.visualstar": true,

  /* フォーマッター */
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* ワークベンチ */
  // アイコンテーマ
  "workbench.iconTheme": "vscode-icons",
  // インデントガイド
  "workbench.tree.renderIndentGuides": "always",
  // explorerのツリーインデント
  "workbench.tree.indent": 8,

  /* エディター */
  // 保存時にフォーマット
  "editor.formatOnSave": true,
  // タブのサイズ
  "editor.tabSize": 2,
  // カッコが色分けされるようにする
  "editor.guides.bracketPairs": true,
  // 今いる階層を上部に表示する
  "editor.stickyScroll.enabled": true,
  // ハイライトを一緒にコピーする
  "editor.copyWithSyntaxHighlighting": true,
  // ミニマップを非表示
  "editor.minimap.enabled": false,

  /* その他 */
  // 言語を日本語にしてエメットを生成
  "emmet.variables": {
    "lang": "ja"
  },
  // VSCodeの音量
  "audioCues.volume": 0,
  "prettier.singleQuote": true,
  "explorer.compactFolders": false,
  "markdown-preview-enhanced.previewTheme": "solarized-dark.css",
  "markdown.preview.breaks": true,
  "workbench.colorTheme": "Solarized Dark"
}

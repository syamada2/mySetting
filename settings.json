{
  "customizeUI.stylesheet": {
    // Vim Status bar color
    // NORMAL MODE
    "#vscodevim\\.vim\\.primary[aria-label=\"-- NORMAL --\"]": "color: #002b2c !important; background-color: #0071aa !important; font-weight: bold;",
    // INSERT MODE
    "#vscodevim\\.vim\\.primary[aria-label=\"-- INSERT --\"]": "color: #002b2c !important; background-color: #687d24 !important; font-weight: bold;",
    // VISUAL MODE
    "#vscodevim\\.vim\\.primary[aria-label^=\"-- VISUAL\"]": "color: #002b2c !important; background-color: #82345a !important font-weight: bold;",
    "#vscodevim\\.vim\\.primary[aria-label^=\":\"]": "background-color: #7f8490 !important:",

    // git status
    "#status\\.scm\\.0.statusbar-item.left": "background-color: #75807d !important; color: #053038 !important",

    // for inline
    ".monaco-workbench .part>.composite.title": "background-color: #16353f !important",
    "body.inline-title-bar:not(.activity-bar-at-bottom) .activity-bar-placeholder": "background-color: #16353f !important;",
    "body.inline-title-bar div.dragging-area-left-padding": "background-color: #16353f !important",
    "body.inline-title-bar div.dragging-area-top": "background-color: #16353f !important",
    ".monaco-workbench .part.editor>.content .editor-group-container>.title .editor-actions": "background-color: #16353f !important"
  },
  "customizeUI.titleBar": "inline", // macOS のみ

  /** vim関連設定 */

  //* insertモードのキーバインド
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": ["j", "j"], "after": ["<Esc>"] },
    { "before": ["っ", "ｊ"], "after": ["<Esc>"] }
  ],

  //* normalモードのキーバインド
  "vim.normalModeKeyBindingsNonRecursive": [
    /*- Vim 操作系 -*/

    /* Leader以外 */
    // 検索ハイライト解除
    { "before": ["<C-n>"], "commands": [":nohl"] },
    // uのundoでVSCodeのものを使用
    { "before": ["u"], "commands": ["undo"] },
    // ctrl+rのredoでVSCodeのものを使用
    { "before": ["<C-r>"], "commands": ["redo"] },
    // dで削除時にyankされないようにする
    { "before": ["d"], "after": ["\"", "_", "d"] },
    { "before": ["D"], "after": ["\"", "_", "D"] },
    { "before": ["d", "d"], "after": ["\"", "_", "d", "d"] },
    // カーソル行の移動
    { "before": ["<C-j>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<C-k>"], "commands": ["editor.action.moveLinesUpAction"] },
    // ファイル内のエラー箇所に移動
    { "before": ["<C-e>"], "commands": ["editor.action.marker.nextInFiles"] },
    { "before": ["<C-e>"], "commands": ["editor.action.marker.prevInFiles"] },
    // Enterでノーマルモードのまま改行されるようにする
    { "before": ["<Enter>"], "after": ["o", "<Esc>"] },
    // 大文字JKで10行ずつ移動する
    { "before": ["K"], "after": ["1", "0", "k"] },
    { "before": ["J"], "after": ["1", "0", "j"] },

    /* Leader */
    // 全選択
    { "before": ["<leader>", "a"], "after": ["g", "g", "V", "G"] },
    // 行の最後にノーマルモードのまま移動
    { "before": ["<leader>", "l"], "after": ["$"] },
    // 行の開始にノーマルモードのまま移動
    { "before": ["<leader>", "h"], "after": ["^"] },

    /*- VSCode 操作系-*/
    // 定義に移動
    {
      "before": ["<leader>", "]"],
      "commands": ["editor.action.revealDefinition"]
    },
    // 型定義に移動
    {
      "before": ["<leader>", "["],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    // 参照に移動
    {
      "before": ["<leader>", "\\"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    // ファイルエクスプローラーのフォーカス
    { "before": ["<leader>", "e"], "commands": ["workbench.view.explorer"] },
    // クイックオープン
    { "before": ["<leader>", "p"], "commands": ["workbench.action.quickOpen"] },
    // コマンドパレット
    {
      "before": ["<leader>", "P"],
      "commands": ["workbench.action.showCommands"]
    },
    // ブックマークのトグル
    { "before": ["<leader>", "b"], "commands": ["Bookmarks.toggle"] },
    // 定義プレビューホバーの表示
    {
      "before": ["<leader>", "g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    // 一つ戻る
    {
      "before": ["<leader>", "-"],
      "commands": ["workbench.action.navigateBack"]
    },
    // 一つ進む
    {
      "before": ["<leader>", "="],
      "commands": ["workbench.action.navigateForward"]
    },
    // クイックフィックス
    { "before": ["<leader>", "."], "commands": ["editor.action.quickFix"] },
    // すべてのタブを閉じる
    {
      "before": ["<leader>", "`", "`"],
      "commands": ["workbench.action.closeAllEditors"]
    },
    // コメントアウト トグル
    { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] },
    // 標準pasteを使用
    {
      "before": ["<leader>", "v"],
      "commands": ["editor.action.clipboardPasteAction"]
    },
    // タブピッカー
    {
      "before": ["<leader>", "t"],
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
      ]
    }
  ],

  //* visualモードのキーバインド
  "vim.visualModeKeyBindingsNonRecursive": [
    // マルチカーソル
    { "before": ["<C-n>"], "after": ["g", "b"] },
    // カーソル行の移動
    // dで削除時にyankされないようにする
    { "before": ["d"], "after": ["\"", "_", "d"] },
    { "before": ["<C-j>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<C-k>"], "commands": ["editor.action.moveLinesUpAction"] },
    // JKで10行ずつ移動する
    { "before": ["J"], "after": ["1", "0", "j"] },
    { "before": ["K"], "after": ["1", "0", "k"] },

    /* Leader */
    // 行の最後まで選択
    { "before": ["<leader>", "l"], "after": ["%"] },
    // 行の開始まで選択
    { "before": ["<leader>", "h"], "after": ["^"] },
    // コメントアウトトグル
    { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] },
    // Escape
    { "before": ["<leader>", "<leader>"], "after": ["<Esc>"] }
  ],

  // easy motion 有効
  "vim.easymotion": true,
  // 検索結果 ハイライト
  "vim.hlsearch": true,
  // たたまれた行をまたぐ
  "vim.foldfix": true,
  // システムのクリップボードを使用
  "vim.useSystemClipboard": true,
  // leaderをspaceキーに設定
  "vim.leader": "<space>",
  // 文字選択したものを * で検索をかけられるようにする
  "vim.visualstar": true,

  "workbench.colorCustomizations": {
    // タイトルバー
    "titleBar.activeBackground": "#ff0000",
    "[Default Dark+]": {
      // エディター
      // "editor.background": "#0d1117",
      "editor.background": "#253a40",
      "editorGroup.border": "#000000",
      "editor.lineHighlightBackground": "#002d39",
      // ガーター
      "editorGutter.background": "#002d39",

      // タブ
      "tab.activeBackground": "#0d1117",
      "tab.activeBorder": "#0d1117",
      "tab.activeBorderTop": "#f78166",
      "tab.activeForeground": "#c9d1d9",
      "tab.border": "#30363d",
      "tab.hoverBackground": "#0d1117",
      "tab.inactiveBackground": "#010409",
      "tab.inactiveForeground": "#8b949e",
      "tab.unfocusedActiveBorder": "#0d1117",
      "tab.unfocusedActiveBorderTop": "#30363d",
      "tab.unfocusedHoverBackground": "#6e76811a",
      "tab.lastPinnedBorder": "#2aa19844",
      // ステータスバー
      "statusBar.background": "#00252f",
      "statusBar.foreground": "#719ddc",
      "statusBarItem.remoteBackground": "#719ddc",
      // アクティビティーバー
      "activityBar.activeBorder": "#f78166",
      "activityBar.background": "#00252f",
      "activityBar.foreground": "#c9d1d9",
      "activityBar.inactiveForeground": "#8b949e",
      "activityBarBadge.background": "#1f6feb",
      "activityBarBadge.foreground": "#f0f6fc",
      // サイドバー
      "sideBar.border": "#30363d",
      "sideBar.foreground": "#c9d1d9",
      "sideBarSectionHeader.background": "#010409",
      "sideBarSectionHeader.border": "#30363d",
      "sideBarSectionHeader.foreground": "#c9d1d9",
      "sideBarTitle.foreground": "#c9d1d9",
      "sideBar.background": "#010409",
      "tree.indentGuidesStroke": "#21262d",
      // ターミナル
      "terminal.ansiBlack": "#073642",
      "terminal.ansiBlue": "#268bd2",
      "terminal.ansiBrightBlack": "#002b36",
      "terminal.ansiBrightBlue": "#839496",
      "terminal.ansiBrightCyan": "#93a1a1",
      "terminal.ansiBrightGreen": "#586e75",
      "terminal.ansiBrightMagenta": "#6c71c4",
      "terminal.ansiBrightRed": "#cb4b16",
      "terminal.ansiBrightWhite": "#fdf6e3",
      "terminal.ansiBrightYellow": "#657b83",
      "terminal.ansiCyan": "#2aa198",
      "terminal.ansiGreen": "#859900",
      "terminal.ansiMagenta": "#d33682",
      "terminal.ansiRed": "#dc322f",
      "terminal.ansiWhite": "#eee8d5",
      "terminal.ansiYellow": "#b58900"
    }
  },

  /* フォーマッター */
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* ワークベンチ */
  // アイコンテーマ
  "workbench.iconTheme": "vscode-icons",
  // インデントガイド
  "workbench.tree.renderIndentGuides": "always",
  // explorerのツリーインデント
  "workbench.tree.indent": 8,

  /* エディター */
  // 保存時にフォーマット
  "editor.formatOnSave": true,
  // タブのサイズ
  "editor.tabSize": 2,
  // カッコが色分けされるようにする
  "editor.guides.bracketPairs": true,
  // 今いる階層を上部に表示する
  "editor.stickyScroll.enabled": true,
  // ハイライトを一緒にコピーする
  "editor.copyWithSyntaxHighlighting": true,
  // ミニマップを非表示
  "editor.minimap.enabled": false,

  /* その他 */
  // 言語を日本語にしてエメットを生成
  "emmet.variables": {
    "lang": "ja"
  },
  // VSCodeの音量
  "audioCues.volume": 0,
  "workbench.colorTheme": "Bourbon",
  "window.titleBarStyle": "native"
}

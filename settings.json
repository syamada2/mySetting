{
  /* VIM */
  // == INSERT ==
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": ["j", "j"], "after": ["<Esc>"] },
    { "before": ["っ", "ｊ"], "after": ["<Esc>"] }
  ],
  // == NORMAL ==
  "vim.normalModeKeyBindingsNonRecursive": [
    // 表示行で移動
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },
    // 大文字JKで10行ずつ移動する
    { "before": ["K"], "after": ["1", "0", "k"] },
    { "before": ["J"], "after": ["1", "0", "j"] },
    // 検索ハイライト解除
    { "before": ["<C-n>"], "commands": [":nohl"] },
    // undo redo でvscodeのものを使用
    { "before": ["u"], "commands": ["undo"] },
    { "before": ["<C-r>"], "commands": ["redo"] },
    // dで削除時にクリップボードに保存されないようにする
    { "before": ["d"], "after": ["\"", "_", "d"] },
    { "before": ["D"], "after": ["\"", "_", "D"] },
    { "before": ["d", "d"], "after": ["\"", "_", "d", "d"] },
    // カーソル行の移動
    { "before": ["<C-j>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<C-k>"], "commands": ["editor.action.moveLinesUpAction"] },
    // 行の最後に移動
    { "before": ["L"], "after": ["$"] },
    // 行の開始に移動
    { "before": ["H"], "after": ["^"] },
    // ;でコマンドモードへ
    { "before": [";"], "after": [":"] },
    // 閉じる
    { "before": ["<leader>", "q"], "commands": [":q"] },
    // 全選択
    { "before": ["<leader>", "a"], "after": ["g", "g", "V", "G"] },
    // 定義に移動
    {
      "before": ["<leader>", "]"],
      "commands": ["editor.action.revealDefinition"]
    },
    // 型定義に移動
    {
      "before": ["<leader>", "["],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    // 参照に移動
    {
      "before": ["<leader>", "\\"],
      "commands": ["editor.action.goToReferences"]
    },
    // ブックマークのトグル
    { "before": ["<leader>", "b"], "commands": ["Bookmarks.toggle"] },
    // 定義プレビューホバーの表示
    {
      "before": ["<leader>", "g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    // クイックフィックス
    { "before": ["<leader>", "."], "commands": ["editor.action.quickFix"] },
    // コメントアウト トグル
    { "before": ["<leader>", "/"], "commands": ["editor.action.commentLine"] }
  ],
  // == VISUAL ==
  "vim.visualModeKeyBindingsNonRecursive": [
    // JKで10行ずつ移動する
    { "before": ["J"], "after": ["1", "0", "j"] },
    { "before": ["K"], "after": ["1", "0", "k"] },
    // 行の最後まで選択
    { "before": ["L"], "after": ["$"] },
    // 行の開始まで選択
    { "before": ["H"], "after": ["^"] },
    // dで削除時にyankされないようにする
    { "before": ["d"], "after": ["\"", "_", "d"] },
    // カーソル行の移動
    { "before": ["<C-j>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<C-k>"], "commands": ["editor.action.moveLinesUpAction"] },
    // マルチカーソル
    { "before": ["<C-n>"], "after": ["g", "b"] }
  ],
  // == COMMAND ==
  "vim.commandLineModeKeyBindingsNonRecursive": [
    { "before": ["<CR>"], "after": ["<CR>", "z", "z"] }
  ],
  // == OTHERS ==
  // easy motion 有効
  "vim.easymotion": true,
  // 検索結果 ハイライト
  "vim.hlsearch": true,
  // たたまれた行をまたぐ
  "vim.foldfix": true,
  // システムのクリップボードを使用
  "vim.useSystemClipboard": true,
  // leaderをspaceキーに設定
  "vim.leader": "<space>",
  // 文字選択したものを * で検索をかけられるようにする
  "vim.visualstar": true,

  /* フォーマッター */
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.defaultFormatter": "Koihik.vscode-lua-format"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* ウィンドウ */
  "window.zoomLevel": 0.5,

  /* ワークベンチ */
  // カラーテーマ
  "workbench.colorTheme": "Bourbon",
  // アイコンテーマ
  "workbench.iconTheme": "vscode-icons",
  // レイアウトコントロール表示
  "workbench.layoutControl.enabled": false,
  // アクティビティーバー表示
  // "workbench.activityBar.visible": false,
  // vscodeスタート画面の表示
  "workbench.startupEditor": "none",

  /* エディター */
  // 保存時にフォーマット
  "editor.formatOnSave": true,
  // タブのサイズ
  "editor.tabSize": 2,
  // カッコのガイド線が色付けされる
  "editor.guides.bracketPairs": false,
  // カッコが色付けされる
  "editor.bracketPairColorization.enabled": false,
  // 今いる階層を上部に表示する
  "editor.stickyScroll.enabled": true,
  // ハイライトを一緒にコピーする
  "editor.copyWithSyntaxHighlighting": true,
  // ミニマップを非表示
  "editor.minimap.enabled": false,
  // カーソルを移動した際にN行以上、上下にスクロールされないようにする
  "editor.cursorSurroundingLines": 10,
  // エディターのフォント
  "editor.fontFamily": "monaco",
  // フォルダ階層を上部に表示する
  "breadcrumbs.enabled": false,

  /* エクスプローラ */
  // インデントガイド
  "workbench.tree.renderIndentGuides": "always",
  // explorerのツリーインデント
  "workbench.tree.indent": 8,
  // フォルダ階層を省略しない
  "explorer.compactFolders": false,
  // 階層矢印非表示
  "vsicons.presets.hideExplorerArrows": true,

  /* パネル */
  // パネルの初期位置
  "workbench.panel.defaultLocation": "right",

  /* 言語ごとの設定 */
  // Markdown
  "markdown-preview-enhanced.previewTheme": "solarized-dark.css",
  "markdown.preview.breaks": true,
  // Lua
  "Lua.telemetry.enable": true,

  /* 拡張機能設定 */
  // Prettier
  "prettier.singleQuote": true,
  // multi-command
  "multiCommand.commands": [
    {
      "command": "Explorer.focusEditor.onOpen",
      "sequence": [
        "filesExplorer.openFilePreserveFocus",
        "workbench.action.focusFirstEditorGroup"
      ]
    }
  ],
  // JS CSS
  "vscode_custom_css.imports": [
    "file:///Users/hira/Library/Application Support/Code/User/css/index.css"
  ],

  /* その他 */
  // 言語を日本語にしてエメットを生成
  "emmet.variables": {
    "lang": "ja"
  },
  // VSCodeの音量
  "audioCues.volume": 0,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
